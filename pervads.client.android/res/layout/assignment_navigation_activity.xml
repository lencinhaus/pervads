<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:gravity="center_horizontal">
<it.polimi.dei.dbgroup.pedigree.pervads.widget.AssignmentView android:id="@+id/assignment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


<TextView android:layout_height="wrap_content" android:textColor="#000000" android:id="@+id/choose" android:layout_width="fill_parent" android:padding="6dip" android:background="#aaaaaa" android:gravity="center_horizontal"></TextView><ListView android:layout_height="wrap_content" android:id="@android:id/list" android:layout_width="fill_parent" android:layout_weight="1">
</ListView><TextView android:layout_height="wrap_content" android:id="@android:id/empty" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="center_vertical|center_horizontal" android:text="@string/assignment_navigation_empty_text"></TextView>

<LinearLayout android:layout_height="wrap_content" android:padding="6dip" android:background="#aaaaaa" android:layout_width="fill_parent" android:gravity="center_horizontal" android:id="@+id/buttons"><Button android:layout_height="wrap_content" android:id="@+id/ok" android:text="@string/button_ok_text" android:layout_width="fill_parent"></Button></LinearLayout>

</LinearLayout>
